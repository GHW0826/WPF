<UserControl x:Class="VisualLogicalTree.TreeStructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualLogicalTree"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Button Content="Print Logical Tree" Click="OnPrintLogicalTree" Width="200" Margin="0,0,0,10"/>
        <Button Content="Print Visual Tree" Click="OnPrintVisualTree" Width="200" Margin="0,0,0,10"/>

        <StackPanel Background="LightGray" Margin="10">
            <TextBlock Text="Hello, Visual/Logical Tree!" Margin="5"/>
            <Button Content="Inner Button" Margin="5"/>
        </StackPanel>
    </StackPanel>
</UserControl>
