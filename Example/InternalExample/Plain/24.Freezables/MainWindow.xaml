<Window x:Class="Freezables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freezables"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Rectangle x:Name="rectFreezable" Width="200" Height="100" Stroke="Black" StrokeThickness="2" />
            <Button Content="Toggle Color" Click="btnToggleColor_Click" Width="150" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
