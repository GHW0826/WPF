<UserControl x:Class="RoutedEvent.RoutedEventTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoutedEvent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightBlue"
          PreviewMouseDown="Grid_PreviewMouseDown"
          MouseDown="Grid_MouseDown">

        <StackPanel Background="LightGreen"
                    Margin="30"
                    PreviewMouseDown="StackPanel_PreviewMouseDown"
                    MouseDown="StackPanel_MouseDown">

            <Border Background="LightCoral"
                    Height="100"
                    Margin="10"
                    PreviewMouseDown="Border_PreviewMouseDown"
                    MouseDown="Border_MouseDown">
                <TextBlock Text="Click Inside Border" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="16"/>
            </Border>

        </StackPanel>

    </Grid>
</UserControl>
